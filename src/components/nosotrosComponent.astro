---
import {fetchFromAPI} from '../lib/conections.ts';
const nosotro = await fetchFromAPI('nosotro');
---
<section class="py-16">
        <div class="container mx-auto">
            <div class="grid md:grid-cols-2 gap-12 items-center ">
                <div class="text-lg">
                    <h2 class="text-3xl font-bold text-black mb-4">{nosotro.titulo1}</h2>
                    <p class="text-gray-950 leading-relaxed mb-8">
                        {nosotro.texto1}
                    </p>
                    <h2 class="text-3xl font-bold text-black mb-4">{nosotro.titulo2}</h2>
                    <p class="text-gray-950 leading-relaxed">
                        {nosotro.texto2}
                    </p>
                </div>
                <div class="w-full h-100 flex items-center justify-center ">
                    <img
                            src={nosotro.imagen.url}
                            alt="Logo del equipo TecnoMark"
                            class="w-full h-full object-cover rounded-2xl"
                    />
                </div>
            </div>
        </div>
</section>
