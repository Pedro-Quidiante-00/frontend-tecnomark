---
import { fetchFromAPI } from '../lib/conections';

interface Props {
    titulo: string;
    cantidad?: number;
}
const { titulo, cantidad } = Astro.props;

const response = await fetchFromAPI('productos');
const data = Array.isArray(response) ? response : [];

const todosLosProductos = data.filter((item: any) => item.categoria === 'perifericos');
const productos = todosLosProductos.slice(0, cantidad);
---

<section class="py-12 px-6 max-w-7xl mx-auto">
    <h2 class="text-3xl font-bold mb-8 uppercase border-b pb-4">
        {titulo || "Hardware"}
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        {productos.map((item: any) => (
                <article class="border rounded-lg bg-white overflow-hidden hover:shadow-lg transition-shadow">
                    <a href={`/producto/${item.slug}`} class="block">
                        <div class="h-56 p-4 flex justify-center items-center bg-gray-50">
                            <img
                                    src={item.image?.url || '/placeholder.png'}
                                    alt={item.nombre}
                                    class="h-full w-full object-contain mix-blend-multiply"
                            />
                        </div>
                        <div class="p-4 text-center border-t border-gray-100">
                            <h3 class="font-semibold text-gray-900 mb-2 truncate">
                                {item.nombre}
                            </h3>
                            <p class="text-xl font-bold text-blue-600">
                                $ {Number(item.precio).toLocaleString('es-CL')}
                            </p>
                        </div>
                    </a>
                </article>
        ))}
    </div>
</section>