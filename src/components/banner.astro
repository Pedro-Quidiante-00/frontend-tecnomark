---
interface Props {
    titulo: string;
    subtitulo: string;
}

const { titulo, subtitulo } = Astro.props;
---
<section class="bg-gray-950 py-20 text-white">
    <div class="container mx-auto text-center px-4">
        <h1 class="text-4xl md:text-5xl font-bold">
            {titulo}
        </h1>
        <p class="mt-4 text-lg text-gray-100 max-w-3xl mx-auto">
            {subtitulo}
        </p>
    </div>
</section>