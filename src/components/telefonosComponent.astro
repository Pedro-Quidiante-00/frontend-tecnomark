---
interface Props {
	titulo: string;
}
const { titulo } = Astro.props;
import productosData from '../data/productos.json';
const productos = productosData.telefonos;
---
<section class="py-12 ">
    <h2 class="text-3xl font-bold uppercase text-white mb-8 text-center">{titulo}</h2>
    <div class=" grid grid-cols-2 gap-6 pb-8  ">
        {productos.map((telefonos) => (
                <div class="w-full border-5  border-gray-200">
                    <a href="" class="flex-col h-full bg-white">
                        <div class="h-80 w-full bg-gray-50 flex items-center justify-center p-4">
                            <img
                                    src={telefonos.imagen_url}
                                    alt={telefonos.nombre}
                                    class="h-full w-full object-contain"
                            />
                        </div>
                        <div class="p-4 bg-gray-200">
                        <span class="text-xs font-bold text-blue-600 uppercase">
                            {telefonos.categoria}
                        </span>
                            <h3 class="mt-2 text-lg font-bold text-gray-900">
                                {telefonos.nombre}
                            </h3>
                            <p class="mt-4 text-xl font-extrabold text-gray-900">
                                {"$"+telefonos.precio}
                            </p>
                        </div>
                    </a>
                </div>
        ))}
    </div>
</section>