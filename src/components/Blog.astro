---
import { PUBLIC_STRAPI_URL } from '../lib/conections';

const response = await fetch(`${PUBLIC_STRAPI_URL}/categoria-noticias?populate[posts][populate]=cover`);
const json = await response.json();

const categorias = Array.isArray(json.data) ? json.data : [];
---
<section class="max-w-7xl mx-auto px-6 py-12">

    <h1 class="text-5xl font-extrabold text-center mb-16 text-gray-900">Blog</h1>

    {/* GRID PRINCIPAL: 3 COLUMNAS (Una por cada categoría) */}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">

        {categorias.map((cat: any) => (

            // --- COLUMNA DE CATEGORÍA ---
            <div class="flex flex-col">

                {/* TÍTULO DE LA CATEGORÍA */}
                    <div class="border-b-2 border-gray-200 pb-3 mb-6">
                        <h2 class="text-2xl font-bold uppercase text-gray-900">
                            {cat.nombre}
                        </h2>
                    </div>

                {/* LISTA DE NOTICIAS (POSTS) */}
                    <div class="flex flex-col gap-6">

                        {/* Verificamos si la categoría tiene posts dentro */}
                        {cat.posts && cat.posts.length > 0 ? (
                            cat.posts.map((post: any) => (

                                // --- TARJETA DE NOTICIA ---
                            <article class="bg-white border border-gray-200 rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
                                        <a href={`/blog/${cat.nombre}/${post.slug}`} class="block">

                                            {/* IMAGEN DIRECTA (Igual que en tu Banner/Destacados) */}
                                            <div class="h-48 overflow-hidden relative">
                                                <img
                                                        src={post.cover?.url}
                                                        alt={post.titulo}
                                                        class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
                                                />
                                            </div>

                                            {/* CONTENIDO */}
                                            <div class="p-5">
                                                <h3 class="font-bold text-gray-900 text-lg leading-tight mb-2 line-clamp-2">
                                                    {post.titulo}
                                                </h3>

                                                <p class="text-gray-500 text-sm line-clamp-3 mb-4">
                                                    {post.resumen}
                                                </p>

                                                <span class="inline-block bg-blue-600 text-white text-xs font-bold px-3 py-1 rounded">
                                            Leer más
                                        </span>
                                            </div>

                                        </a>
                                    </article>
                            ))
                        ) : (
                            // SI NO HAY NOTICIAS
                        <div class="p-6 border-2 border-dashed border-gray-100 rounded-lg text-center text-gray-400">
                                    <p>Pronto más novedades en {cat.nombre}</p>
                                </div>
                        )}
                    </div>

                </div>

        ))}

    </div>
</section>