---
import { PUBLIC_STRAPI_URL } from '../lib/conections';

// 1. PETICIÓN (Estilo Destacados: fetch directo y simple)
const response = await fetch(`${PUBLIC_STRAPI_URL}/categoria-noticias?populate[posts][populate]=cover`);
const { data } = await response.json();

const categorias = data || [];
---
<section class="max-w-7xl mx-auto px-6 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
        {categorias.map((item: any) => (
                <div class="flex flex-col">
                    {/* Título de la Categoría */}
                    <div class="border-b-2 border-gray-200 pb-3 mb-6">
                        <h2 class="text-2xl font-bold uppercase text-gray-900">
                            {item.nombre}
                        </h2>
                    </div>
                    {/* Lista de Noticias */}
                    <div class="flex flex-col gap-6">
                        {(item.posts || []).map((post: any) => (
                                <article class="bg-white border border-gray-200 rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
                                    <a href={`/blog/${post.slug}`}>

                                        <div class="h-48 overflow-hidden relative">
                                            {/* Cloudinary directo */}
                                            <img
                                                    src={post.cover?.url || '/placeholder.png'}
                                                    alt={post.titulo}
                                                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
                                            />
                                        </div>

                                        <div class="p-5">
                                            <h3 class="font-bold text-gray-900 text-lg leading-tight mb-2 line-clamp-2">
                                                {post.titulo}
                                            </h3>
                                            <p class="text-gray-500 text-sm line-clamp-3 mb-4">
                                                {post.resumen}
                                            </p>
                                            <span class="inline-block bg-blue-600 text-white text-xs font-bold px-3 py-1 rounded">
                                        Leer más
                                    </span>
                                        </div>
                                    </a>
                                </article>
                        ))}
                    </div>

                </div>
        ))}
    </div>
</section>