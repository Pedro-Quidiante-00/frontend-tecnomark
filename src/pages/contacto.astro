---
import Layout from '../layouts/Layout.astro';
import Banner from "../components/banner.astro";
---
<Layout>
    <main>
        <Banner
                titulo="Contactanos"
                subtitulo="¿Hola? ¿En que podemos ayudarte?"
        />
        <section class="py-20 ">
            <div class="container mx-auto w-3xl">
                <div class="gap-12 bg-gray-50 rounded-lg border border-black">
                    <div class=" p-8 rounded-lg shadow-2xl ">
                        <h2 class="text-3xl font-bold mb-6  text-black">Envíanos un Mensaje</h2>
                        <form
                                action="https://formspree.io/f/xanldgpd"
                                method="POST"
                                class="space-y-4"
                        >
                            <div>
                                <label for="name" class="font-bold text-black mb-1">Nombre</label>
                                <input
                                        type="text"
                                        id="name"
                                        name="name"
                                        required
                                        class="w-full border-black font-semibold text-black p-2 rounded-2xl border-2 "
                                        placeholder="Tu nombre"
                                />
                            </div>
                            <div>
                                <label for="telefono"  class="font-bold text-black mb-1">Telefono*</label>
                                <input type="tel"
                                       id="phone"
                                       name="phone"
                                       pattern="[0-9]{9}"
                                       placeholder="(9 numeros) Sin el +56"
                                       class="w-full border-black font-semibold text-black p-2  rounded-2xl border-2"
                            </div>
                            <div>
                                <label for="email" class="font-bold text-black mb-1">Correo electrónico</label>
                                <input
                                        type="email"
                                        id="email"
                                        name="email"
                                        required
                                        class="w-full border-black font-semibold text-black p-2  rounded-2xl border-2"
                                        placeholder="ejemplo@correo.cl"
                                />
                            </div>
                            <div>
                                <label for="subject" class="font-bold text-black mb-1">Asunto</label>
                                <input
                                        type="text"
                                        id="subject"
                                        name="subject"
                                        required
                                        class="w-full border-black font-semibold text-black p-2  rounded-2xl border-2"
                                        placeholder="Motivo del contacto"
                                />
                            </div>
                            <div>
                                <label for="message" class="text-black font-bold mb-1">Mensaje</label>
                                <textarea
                                        id="message"
                                        name="message"
                                        required
                                        class="w-full border-black font-semibold text-black p-2 rounded-2xl border-2"
                                        rows="5"
                                        placeholder="Escribe tu mensaje aquí"
                                ></textarea>
                            </div>

                            <button
                                    type="submit"
                                    class="w-full bg-green-600 text-white py-3 rounded-lg font-bold hover:bg-green-700 transition">
                                ENVIAR
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>